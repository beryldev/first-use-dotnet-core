@model Wrhs.WebApp.ViewModels.PasswordViewModel

@{
    Layout = "~/Views/_Layout.cshtml";
}

<div class="row" style="margin-top: 50px;">
    <div class="col-sm-6 col-sm-offset-3">
        <div class="panel panel-default">
            <div class="panel-body">
                <h1>Hello!</h1>
                <p>It's your first time.<br>Please set admin password.</p>
                <form action="@Url.Action("Password", "Account")" method="post">
                    <div class="form-group">
                        <label>New admin password</label>
                        <input type="password" class="form-control" name="password">
                        <small class="help-block">Requirements: min. 6 chars, one lowercase, one UPPERCASE, one non-alphanumeric, one digit</small>
                        @if(Model.Errors.Any())
                        {
                            <ul>
                                @foreach(var error in Model.Errors)
                                {
                                    <li>@error</li>
                                }
                            </ul>
                        }
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary btn-block">
                            Submit
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>